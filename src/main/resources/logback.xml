<!--configuration is the root element of the logback.xml file. All Logback configs is enclosed within this element-->
<configuration>
<!--    Appender -> Where the logs going to be printed, like console appender     -->
    <appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

